<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MagicMirrorView">
        <attr name="mirrorSharp">
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
            <enum name="roundRect" value="2" />
            <enum name="oval" value="3" />
            <enum name="polygon" value="4" />
            <enum name="any" value="5" />
        </attr>
        <attr name="mirrorFilter">
            <enum name="oldPicture" value="1" />
            <enum name="gray" value="2" />
            <enum name="saturation" value="3" />
        </attr>

        <attr name="mirrorSides" format="integer" />
        <attr name="mirrorCorner" format="dimension" />
        <attr name="mirrorBorderWidth" format="dimension" />
        <attr name="mirrorBorderColor" format="reference|color" />
        <attr name="mirrorAnySharp" format="reference" />
    </declare-styleable>
</resources>