<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MagicMirrorView">
        <attr name="mirrorSharp">
            <flag name="rect" value="0" />
            <flag name="circle" value="1" />
            <flag name="roundRect" value="2" />
            <flag name="oval" value="3" />
            <flag name="polygon" value="4" />
            <flag name="any" value="5" />
        </attr>
        <attr name="mirrorSides" format="integer"/>
        <attr name="mirrorCorner" format="dimension"/>
        <attr name="mirrorBorderWidth" format="dimension"/>
        <attr name="mirrorBorderColor" format="reference|color"/>
        <attr name="mirrorAnySharp" format="reference"/>
    </declare-styleable>
</resources>