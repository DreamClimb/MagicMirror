<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">

        <com.kingja.magicmirror.MagicMirrorView
            app:mirrorSharp="rect"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/jared_leto"
            android:layout_weight="0.02" />

        <com.kingja.magicmirror.MagicMirrorView
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/jared_leto"
            app:mirrorSharp="circle"/>

        <com.kingja.magicmirror.MagicMirrorView
            android:id="@+id/polygonMirror"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/jared_leto"
            app:mirrorFilter="saturation"
            app:mirrorSharp="polygon"
            app:mirrorSides="5"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <com.kingja.magicmirror.MagicMirrorView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/jared_leto"
            app:mirrorCorner="10dp"
            app:mirrorSharp="roundRect"/>

        <com.kingja.magicmirror.MagicMirrorView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/jared_leto"
            app:mirrorSharp="oval"/>

        <com.kingja.magicmirror.MagicMirrorView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/jared_leto"
            app:mirrorAnySharp="@drawable/beauty"
            app:mirrorSharp="any"
            android:id="@+id/magicMirrorView" />
    </LinearLayout>


</LinearLayout>